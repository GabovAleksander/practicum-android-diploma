<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/padding_8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivCompany"
        android:layout_width="@dimen/dm_48dp"
        android:layout_height="@dimen/dm_48dp"
        android:background="@color/background"
        android:padding="@dimen/dm_1dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_placeholder_32px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/cornerRadiusCoverVacancy"
        app:strokeColor="@color/light_gray"
        app:strokeWidth="@dimen/dm_1dp" />

    <TextView
        android:id="@+id/tvVacancyName"
        style="@style/text_22"
        android:layout_width="@dimen/dm_zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dm_12dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivCompany"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Разработчик на С++ в команду внутренних сервисов, Москвааааааааааааааааааааааааааааааааааааааааааааааааааааааааааааааааааааааааа" />

    <TextView
        android:id="@+id/tv_employer_name"
        style="@style/text_16"
        android:layout_width="@dimen/dm_zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dm_12dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivCompany"
        app:layout_constraintTop_toBottomOf="@id/tvVacancyName"
        tools:text="Авто.руууууууууууууууууууууууууууууууууууууууууууууууууууууууууууууу" />

    <TextView
        android:id="@+id/tv_salary"
        style="@style/text_16"
        android:layout_width="@dimen/dm_zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dm_12dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivCompany"
        app:layout_constraintTop_toBottomOf="@id/tv_employer_name"
        tools:text="от 40 000 до 80 000 ₽ррррррррррррррррррррррррррррррррррррррррррррррр" />

</androidx.constraintlayout.widget.ConstraintLayout>
