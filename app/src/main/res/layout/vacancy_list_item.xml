<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/vacancyLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dm_about_margin_horizontal"
    android:paddingTop="@dimen/margin_8dp"
    android:paddingBottom="@dimen/margin_8dp"
    android:paddingEnd="@dimen/dm_about_margin_horizontal"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCompanyCover"
            android:layout_width="@dimen/size_48dp"
            android:layout_height="@dimen/size_48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vacancyAndCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_22"
                android:text="@string/vacancy_and_city" />

            <TextView
                android:id="@+id/companyName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_20dp"
                style="@style/text_16"
                android:text="Супер компания"/>

            <TextView
                android:id="@+id/salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_16"
                android:text="@string/salary_not_specified"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
